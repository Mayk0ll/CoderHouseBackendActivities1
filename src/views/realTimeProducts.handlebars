


<div>
    <h1>Productos a tiempo real</h1>
    <div class="row">
        <div class="col-9 d-flex flex-wrap" id="product-list">
            {{#each products}}
                <div class="cartProduct m-2">
                    <h2>{{this.name}}</h2>
                    <p>{{this.description}}</p>
                    <p>Código: {{this.code}}</p>
                    <p>Precio: {{this.price}}</p>
                    <p>Disponible: {{this.stock}}</p>
                    <p></p>
                    <p>Categoría: {{this.category}}</p>
                    <button type="button" class="btn btn-primary mt-2" onclick="deleteProduct(event, {{this.id}})">Eliminar</button>
                </div>
            {{/each}}
        </div>
        <div class="col-3 mt-3 mb-3 formContainerProductCreate">
            <h4>Crear un producto</h4>
            <form class="mt-5">
                <div class="d-flex justify-content-between mb-3">
                    <label for="name" class="me-2">Nombre: </label>
                    <input type="text" class="input-group w-50 ps-1" name="name" id="name" value="prueba">
                </div>
                <div class="d-flex justify-content-between mb-3">
                    <label for="description" class="me-2">Descripcion: </label>
                    <input type="text" class="input-group w-50 ps-1" name="description" id="description" value="prueba">
                </div>
                <div class="d-flex justify-content-between mb-3">
                    <label for="code" class="me-2">Codigo: </label>
                    <input type="text" class="input-group w-50 ps-1" name="code" id="code" value="prueba">
                </div>
                <div class="d-flex justify-content-between mb-3">
                    <label for="price" class="me-2">Precio: </label>
                    <input type="number" class="input-group w-50 ps-1" name="price" id="price" min="0" value="50">
                </div>
                <div class="d-flex justify-content-between mb-3">
                    <label for="stock" class="me-2">Cantidad: </label>
                    <input type="number" class="input-group w-50 ps-1" name="stock" id="stock" min="0" value="20">
                </div>
                <div class="d-flex justify-content-between mb-3">
                    <label for="category" class="me-2">Categoria: </label>
                    <input type="text" class="input-group w-50 ps-1" name="category" id="category" value="prueba">
                </div>
                <button type="button" class="btn btn-primary" onclick="createProduct(event)">Crear producto</button>
            </form>



        </div>
    </div>

    

</div>