<div class="container">
    <h2>Carrito</h2>
    {{#if products}}
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Producto</th>
                    <th>Precio</th>
                    <th>Cantidad</th>
                    <th>Subtotal</th>
                    <th>Eliminar</th>
                </tr>
            </thead>
            <tbody>
                {{#each products}}
                    <tr>
                        <td>{{this.name}}</td>
                        <td>{{this.price}}$</td>
                        <td>{{this.quantity}}</td>
                        <td>{{this.subtotal}}$</td>
                        <td><button class="btn btn-danger">X</button></td>
                    </tr>
                {{/each}}
            </tbody>
        </table>
        <h3>Total: {{total}} $</h3>
        <button type="button" class="btn btn-primary" onclick="buy()">Comprar</button>
    {{else}}
        <h3>No hay productos en el carrito</h3>
    {{/if}}
</div>